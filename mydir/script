#!/bin/bash

# Текущая дата и время
echo "===== СИСТЕМНЫЙ МОНИТОРИНГ ====="
echo "Дата: $(date)"

# Свободное дисковое пространство
echo -e "\nСвободное место на диске:"
df -h /

# Свободная оперативная память
echo -e "\nИспользование оперативной памяти:"
free -h
